---
import { features } from '../../data/landing';
---
<section id="features" class="py-32 section">
  <div class="container-max text-center">
    <div class="text-center mb-16">
      <span class="font-body text-xs font-bold uppercase tracking-[0.3em] text-rose-600 mb-4 block">The Experience</span>
      <h2 class="font-heading text-5xl md:text-6xl text-stone-900 dark:text-stone-100 font-light leading-tight">Everything you need</h2>
    </div>      
    <div class="grid md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="card-joy group hover:-translate-y-2 transition-transform duration-300">
          <div class="text-4xl mb-6 bg-stone-100/50 w-16 h-16 rounded-2xl flex items-center justify-center text-stone-900 dark:text-stone-100">
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="font-heading text-2xl font-semibold mb-3">{feature.title}</h3>
          <p class="leading-relaxed opacity-80">{feature.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>