---
import { features } from '../../data/landing';
---

<section id="features" class="py-32 section bg-stone-50 dark:bg-[#0c0a09] relative overflow-hidden">
  
  <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-white/40 dark:bg-stone-800/20 rounded-full blur-[120px] pointer-events-none"></div>

  <div class="container-max relative z-10">
    
    <div class="text-center mb-24 max-w-3xl mx-auto">
      <span class="font-body text-xs font-bold uppercase tracking-[0.3em] text-rose-600 mb-6 block">
        The Experience
      </span>
      <h2 class="font-heading text-5xl md:text-6xl text-stone-900 dark:text-stone-50 font-light leading-tight mb-8">
        Everything you need, <br class="hidden md:block" />
        <span class="font-serif italic text-stone-400 dark:text-stone-500">nothing you don't.</span>
      </h2>
    </div>      

    <div class="grid md:grid-cols-3 gap-8 lg:gap-10 items-start">
      {features.map((feature, index) => (
        <div 
          class:list={[
            "group relative p-10 rounded-[2rem] border transition-all duration-500 ease-out",
            // Base Styles: White/Dark background, subtle border
            "bg-white dark:bg-stone-900 border-stone-100 dark:border-stone-800",
            
            // HOVER EFFECT: The 'Levitation'
            // 1. Lift Up slightly (-translate-y-2)
            // 2. Cast a Rose-tinted shadow (shadow-rose-900/10)
            // 3. Border turns Rose (border-rose-100)
            "hover:-translate-y-2 hover:shadow-[0_30px_60px_-15px_rgba(225,29,72,0.12)] hover:border-rose-100 dark:hover:border-rose-900/30",
            
            // Stagger Logic (Layout Rhythm)
            index === 1 ? "md:mt-16" : "md:mt-0"
          ]}
        >
          
          <div 
            class="mb-8 w-16 h-16 rounded-2xl bg-stone-50 dark:bg-stone-950 border border-stone-100 dark:border-stone-800 flex items-center justify-center text-stone-500 dark:text-stone-400 transition-all duration-500 group-hover:scale-110 group-hover:bg-rose-600 group-hover:text-white group-hover:border-rose-500 group-hover:shadow-[0_10px_40px_-10px_rgba(225,29,72,0.5)]"
          >
            <div class="w-7 h-7" set:html={feature.icon} />
          </div>
          
          <h3 class="font-heading text-2xl text-stone-900 dark:text-stone-100 mb-4 group-hover:text-rose-600 dark:group-hover:text-rose-400 transition-colors duration-300">
            {feature.title}
          </h3>
          
          <p class="text-stone-600 dark:text-stone-400 leading-relaxed text-[15px] font-body">
            {feature.desc}
          </p>

        </div>
      ))}
    </div>

  </div>
</section>